@model GalleryBookApp.Models.ComicBook[]
@*This will make our view strongly typed , specifically making the view's Model property to be an array of ComicBook objects 
   => this aligns with the type of data that the controller is passing to this view  *@
@{
    ViewBag.Title = "Comic Books";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    @foreach (var comicBook in Model)
    {
        <div class="col-md-3">
            <h4>@comicBook.DisplayText</h4>
            <img src="/Images/@comicBook.CoverImageFileName"
                 alt="@comicBook.DisplayText"
                 class="img-responsive" />
        </div>
    }

</div>

